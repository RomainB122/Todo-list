{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle tâche{% endblock %}

{% block body %}
    <div class="form-container">
        <h2>Créer une nouvelle tâche</h2>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name, 'Nom de la tâche') }}
                {{ form_widget(form.name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description) }}
            </div>

            <div class="form-group">
                {{ form_label(form.category, 'Catégorie') }}
                {{ form_widget(form.category) }}
            </div>

            <div class="form-buttons">
                <a href="{{ path('app_todo_index') }}" class="btn btn-cancel">Annuler</a>
                <button type="submit" class="btn btn-submit">Créer</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
