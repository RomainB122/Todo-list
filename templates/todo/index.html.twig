{% extends 'base.html.twig' %}

{% block title %}Todo index{% endblock %}

{% block body %}
    <h1>Todo index</h1>

    <!-- Formulaire de filtrage par checkbox -->
    <form method="get" action="{{ path('app_todo_index') }}">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="filter" value="pending" id="filterPending" 
                {% if filter == 'pending' %}checked{% endif %}>
            <label class="form-check-label" for="filterPending">
                Afficher uniquement les tâches à faire
            </label>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Appliquer le filtre</button>
    </form>

    <!-- Tableau des tâches -->
    <table class="table mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>IsCheck</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
                <td>{{ todo.id }}</td>
                <td>{{ todo.name }}</td>
                <td>{{ todo.description }}</td>
                <td>{{ todo.isCheck ? '✅' : '❌' }}</td>
                <td>
                    <a href="{{ path('app_todo_show', {'id': todo.id}) }}">show</a>
                    <a href="{{ path('app_todo_edit', {'id': todo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No tasks found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_todo_new') }}" class="btn btn-success mt-3">Create new</a>
{% endblock %}
